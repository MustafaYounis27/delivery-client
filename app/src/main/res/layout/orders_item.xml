<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/solid_white_background"
    android:elevation="4dp"
    android:layout_margin="10dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/from"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/green_circle_imag"
            />

        <View
            android:id="@+id/line"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/from"
            android:background="#666666"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/to"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/line"
            android:src="@drawable/gray_circle_img"
            />
        <TextView
            android:id="@+id/date_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/4/2020"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/from"
            android:layout_margin="5dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macdonals"
            android:layout_toRightOf="@+id/from"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-ahmed oraby,ain shams,ciro,egypt"
            android:layout_below="@+id/line"
            android:layout_toRightOf="@+id/to"
            android:textSize="16sp"
            android:textColor="#000"
            android:lines="1"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/Price_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="20 LE" android:layout_margin="5dp"
        android:textSize="20sp"
        android:textColor="#111111"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="5dp"/>
</LinearLayout>