<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.home_page.HomeFragments.OrderTrackingFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rrrr"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/deleviery_imag" />
    </FrameLayout>

    <com.github.florent37.shapeofview.shapes.ArcView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="2"
        android:elevation="4dp"
        app:shape_arc_cropDirection="outside"
        app:shape_arc_height="20dp"
        app:shape_arc_position="top">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#fff"
            android:scaleType="fitXY"
            tools:ignore="Suspicious0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/themm"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="20dp">

                    <com.budiyev.android.circularprogressbar.CircularProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:animateProgress="true"
                        app:backgroundStrokeColor="#E6E6E6"
                        app:backgroundStrokeWidth="10dp"
                        app:drawBackgroundStroke="true"
                        app:foregroundStrokeCap="butt"
                        app:foregroundStrokeColor="#FF8500"
                        app:foregroundStrokeWidth="10dp"
                        app:indeterminate="false"
                        app:indeterminateMinimumAngle="45"
                        app:indeterminateRotationAnimationDuration="1200"
                        app:indeterminateSweepAnimationDuration="600"
                        app:maximum="40"
                        app:progress="40"
                        app:progressAnimationDuration="100"
                        app:startAngle="270" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/minute_left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="#000"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="min"
                            android:textColor="#000"
                            android:textSize="30sp" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Now Search For Delivery"
                    android:textColor="#060606"
                    android:textSize="25sp" />

                <com.shuhart.stepview.StepView
                    android:id="@+id/step_vieww"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:sv_animationType="Line"
                    app:sv_doneCircleColor="#FFC235"
                    app:sv_doneCircleRadius="18dp"
                    app:sv_doneStepLineColor="#FFC235"
                    app:sv_doneStepMarkColor="#fff"
                    app:sv_doneTextColor="#fff"
                    app:sv_nextStepCircleColor="#E6E6E6"
                    app:sv_nextStepCircleEnabled="true"
                    app:sv_nextStepLineColor="#E6E6E6"
                    app:sv_nextTextColor="#fff"
                    app:sv_selectedCircleColor="#E6E6E6"
                    app:sv_selectedCircleRadius="20dp"
                    app:sv_selectedStepNumberColor="#FFC235"
                    app:sv_selectedTextColor="#FFC235"
                    app:sv_stepLineWidth="10dp"
                    app:sv_stepNumberTextSize="18sp"
                    app:sv_stepPadding="4dp"
                    app:sv_stepViewStyle="@style/StepView" />

                <Button
                    android:id="@+id/next_to_rateing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/green_solid_background"
                    android:elevation="10dp"
                    android:text="next"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>
    </com.github.florent37.shapeofview.shapes.ArcView>
</LinearLayout>